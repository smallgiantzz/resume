* {
    margin: 0%;
    padding: 0%;
    box-sizing: border-box;
}

nav {
width: 100%;
height: 80px;
background-color: darkseagreen;
display: flex;
flex-direction: row;
justify-content: space-around;
align-items: center;
  font-family: 'Libre Baskerville', serif;
}

nav ul {
display: flex;
}

nav ul li {
list-style: none;
}

nav ul li a {
text-decoration: none;
color: #000;
padding: 15px 30px;
text-transform: uppercase;
transition: .3s ease;
}

nav ul li a:hover {
color: antiquewhite;
}

.my-header {
  
  background-color:green;
  height: 700px;
  background-size: cover;
  background-position: center;
  display: flex;
justify-content: center;

}

.my-h3 {
font-size:80px;
font-family: 'Times New Roman', Times, serif;
font-weight: bolder;
   text-transform: uppercase;
  line-height: 95px;
  align-items: center;
  margin-top: 3rem;
    
}
  
.my-header-info {
  margin: 5em
    display: flex;
justify-content: center;
}


